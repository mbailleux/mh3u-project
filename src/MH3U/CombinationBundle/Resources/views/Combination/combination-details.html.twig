<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>{{ 'mh3u.combination.header.item_a'     | trans }}</th>
            <th>{{ 'mh3u.combination.header.item_b'     | trans }}</th>
            <th>{{ 'mh3u.combination.header.result'     | trans }}</th>
            <th>{{ 'mh3u.combination.header.percent'    | trans }}</th>
            <th>{{ 'mh3u.combination.header.quantity'   | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for combination in combinations %}
            <tr>
                {#<td>{{ combination.id }}</td>#}
                <td>{{ combination.itemA.name | trans({}, 'item') }}</td>
                <td>{{ combination.itemB.name | trans({}, 'item') }}</td>
                <td>{{ combination.itemResult.name | trans({}, 'item') }}</td>
                <td>{{ combination.percent }}%</td>
                <td>{{ combination.quantity }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>