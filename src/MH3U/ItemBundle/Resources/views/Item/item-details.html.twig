<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Item</th>
            <th>Rank</th>
            <th>Capacity</th>
            <th>Purchase</th>
            <th>Sale</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.rank }}</td>
                <td>
                    {% if item.capacity %}
                        {{ item.capacity }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if item.pricePurchase %}
                        {{ item.pricePurchase }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if item.priceSale %}
                        {{ item.priceSale }}
                    {% else %}
                        -
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>