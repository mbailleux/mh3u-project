<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {#<th>#</th>#}
            <th>{{ 'mh3u.items.header.item'     | trans }}</th>
            <th>{{ 'mh3u.items.header.rank'     | trans }}</th>
            <th>{{ 'mh3u.items.header.capacity' | trans }}</th>
            <th>{{ 'mh3u.items.header.purchase' | trans }}</th>
            <th>{{ 'mh3u.items.header.sale'     | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                {#<td>{{ item.id }}</td>#}
                <td>{{ item.name | trans({}, 'item') }}</td>
                <td>{{ item.rarity }}</td>
                <td>
                    {% if item.capacity %}
                        {{ item.capacity }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if item.pricePurchase %}
                        {{ item.pricePurchase }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if item.priceSale %}
                        {{ item.priceSale }}
                    {% else %}
                        -
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>